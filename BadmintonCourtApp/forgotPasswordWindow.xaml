<Window x:Class="BadmintonCourtApp.forgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Forgot Password" Height="350" Width="400"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Forgot Password" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBox Name="EmailTextBox" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,20" />
            <TextBox Name="NewPasswordBox" materialDesign:HintAssist.Hint="New Password" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,20"/>

            <Button Content="Reset Password" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,20,0,0" HorizontalAlignment="Center" Width="150" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
