<Window x:Class="BadmintonCourtApp.registerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="558" Width="442">

    <Grid Background="#FFE5E5E5" Margin="20,10,20,20">
        <TextBlock x:Name="PasswordBox1" Text="Register" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Width="101"/>

        <StackPanel Width="300" >
            <Label Content="Name"/>
            <TextBox Name="NameTextBox"  Margin="0,5"/>

            <Label Content="Email"/>
            <TextBox Name="EmailTextBox"  Margin="0,5"/>

            <Label Content="Phone Number"/>
            <TextBox Name="PhoneNumberTextBox" Margin="0,5"/>

            <Label Content="Username"/>
            <TextBox Name="UsernameTextBox"  Margin="0,5"/>

            <Label Content="Password"/>
            <PasswordBox Name="PasswordBox"  Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Back" Margin="10" Padding="10,5" Click="BackButton_Click"/>
                <Button Content="Register" Margin="10" Padding="10,5" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
